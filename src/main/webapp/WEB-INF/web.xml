<!DOCTYPE web-app PUBLIC
 "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
 "http://java.sun.com/dtd/web-app_2_3.dtd" >

<web-app>
  <display-name>Archetype Created Web Application</display-name>
  <listener>
    <listener-class>
      com.railway.listener.AppStartupListener
    </listener-class>
  </listener>

  <servlet>
    <servlet-name>RailwayCrossingServlet</servlet-name>
    <servlet-class>com.railway.app.servlet.RailwayCrossingServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>RailwayCrossingServlet</servlet-name>
    <url-pattern>/railway-crossing</url-pattern>
  </servlet-mapping>

</web-app>
