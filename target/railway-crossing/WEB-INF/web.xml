<!DOCTYPE web-app PUBLIC
        "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
        "http://java.sun.com/dtd/web-app_2_3.dtd" >

<web-app>
    <display-name>Archetype Created Web Application</display-name>
    <listener>
        <listener-class>
            com.railway.listener.AppStartupListener
        </listener-class>
    </listener>

    <servlet>
        <servlet-name>RailwayCrossingServlet</servlet-name>
        <servlet-class>com.railway.app.servlet.GovtRailwayServlet</servlet-class>
    </servlet>


    <servlet>
        <servlet-name>UserRailwayCrossingServlet</servlet-name>
        <servlet-class>com.railway.app.servlet.PublicRailwayServlet</servlet-class>
    </servlet>


    <servlet-mapping>
        <servlet-name>UserRailwayCrossingServlet</servlet-name>
        <url-pattern>/public</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>RailwayForm</servlet-name>
        <jsp-file>/govt/railway-from.jsp</jsp-file>
    </servlet>

    <servlet>
        <servlet-name>Logout</servlet-name>
        <jsp-file>/index.jsp</jsp-file>
    </servlet>

    <servlet>
        <servlet-name>Home</servlet-name>
        <jsp-file>/index.jsp</jsp-file>
    </servlet>

    <servlet>
        <servlet-name>Login</servlet-name>
        <jsp-file>/login.jsp</jsp-file>
    </servlet>

    <servlet-mapping>
        <servlet-name>Login</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>Home</servlet-name>
        <url-pattern>/</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>Logout</servlet-name>
        <url-pattern>/logout</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>RailwayForm</servlet-name>
        <url-pattern>/railway-form</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>RailwayCrossingServlet</servlet-name>
        <url-pattern>/govt</url-pattern>
    </servlet-mapping>
    
    <welcome-file-list>
        <welcome-file>/govt</welcome-file>
    </welcome-file-list>

</web-app>
